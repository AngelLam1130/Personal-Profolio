{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/TabButton.js", "app/components/ProjectTag.js", "app/components/ProjectSection.js", "app/components/ProjectCard.js", "app/components/NavLink.js", "app/components/Navbar.js", "app/components/MenuOverlay.js", "app/components/HeroSection.js", "app/components/ContactSection.js", "app/components/AboutSection.js"],
  "exclude": ["node_modules"]
}
